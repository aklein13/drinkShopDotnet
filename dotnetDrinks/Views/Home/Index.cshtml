@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000" style="height: 61vh; overflow: hidden;">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <!-- Css file doesnt' work O.o -->
            <img src="~/images/cola.png" alt="Cola" class="img-responsive" style="width: 100%;"/>
            <div class="carousel-caption" role="option">
                <p>
                    Learn how to buy Cola that you can drink anywhere.
                    <a class="btn btn-default" href="/Drinks/Details/2">
                        More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/sprite.jpg" alt="Sprite" class="img-responsive" style="width: 100%;"/>
            <div class="carousel-caption" role="option">
                <p>
                    Learn how to buy Sprite that you can drink anywhere.
                    <a class="btn btn-default" href="/Drinks/Details/3">
                        More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/pepsi.jpg" alt="Package Management" class="img-responsive" style="width: 100%;"/>
            <div class="carousel-caption" role="option">
                <p>
                    Learn how to buy Pepsi that you can drink anywhere.
                    <a class="btn btn-default" href="/Drinks/Details/1">
                        More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/fanta.jpg" alt="Fanta" class="img-responsive" style="width: 100%;"/>
            <div class="carousel-caption" role="option">
                <p>
                    Learn how to buy Fanta that you can drink anywhere.
                    <a class="btn btn-default" href="/Drinks/Details/4">
                        More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">Drink Shop</h1>
        <p>Wellcome to this beautiful shop with drinks and companies.</p>
    </div>
</div>
